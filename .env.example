# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=ai_search_db

# Embedding Service Configuration
# Option 1: Hugging Face (for cloud deployment like Railway) - Free tier available
# Get your key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Option 2: Ollama (for local development) - Completely free
# Leave HUGGINGFACE_API_KEY empty to use Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text

# Server Configuration
PORT=3000
